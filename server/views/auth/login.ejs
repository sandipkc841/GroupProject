<%- include('../partials/header'); %> 

<%- include('../partials/nav'); %>

<!-- Login Section -->
<main>
  <!-- Message Area -->
  <% if(messages.length > 0) {%>
      <div>
        <%= messages %>
      </div>
  <% } %>
  
  <div class="container">
    <div class="login">
      <h3 class="project-name" style="padding: 20px; font-size: 2.5rem">
        Debuggers
      </h3>
      <form method="POST">
          <label class="loginLabel" for="username" style="margin-top: 30px;">USERNAME:</label>
          <input class="loginInput" for="username" name="username" type="text" style="margin-bottom: 25px;">
          <label class="loginLabel" for="password">PASSWORD:</label>
          <input class="loginInput" for="password" name="password" type="password" style="margin-bottom: 50px;" />
          <button type="submit" class="nav-item nav-item-btn login">LOGIN</button>
          <a href="/surveys/active-surveys" class="nav-item nav-item-btn">CANCEL</a>
          <p id="registerLink" >Don't have an account? <a target="_blank" href="/register"  style="color: #425F57;">Create One</a> </p>
      </form>
    </div>
  </div>
</main>

